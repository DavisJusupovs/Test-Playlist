<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Playlist</title>
  <link href="styles.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/0780397c31.js" crossorigin="anonymous"></script>
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Patua+One&family=Poppins:wght@300;500&display=swap" rel="stylesheet">
</head>

<body>
  <div  id="heading">
    <h1>My Playlist</h1>
  </div>
  <div class="box">
    <div class="header">
      <ul>
        <li>Artist</li>
        <li>Title</li>
        <li>Album</li>
        <li>Release Year</li>
        <li>Duration</li>
      </ul>
    </div>

  <% newListItems.forEach(function(item){ %>
    <form class="" name="newItemId" action="/delete"  method="post" >
      <div class="listItem">
        <ul>
          <li><%= item.artist %></li>
          <li><%= item.title %></li>
          <li><%= item.album %></li>
          <li><%= item.releaseYear %></li>
          <li><%= item.duration %></li>
        </ul>
            <button type="button" name="modify"><i class="fas fa-edit"></i></button>
            <button type="submit" name="newItemId" value= <%= item._id %> ><i class="fas fa-trash-alt"></i></button>
      </div>
    </form>
  <%});%>
</div>

    <div class="addItem box">
      <form class="item" action="/" method="post">
        <input type="text" name="newArtist" placeholder="Artist" autocomplete="off">
        <input type="text" name="newTitle" placeholder="Title" autocomplete="off">
        <input type="text" name="newAlbum" placeholder="Album" autocomplete="off">
        <input type="text" name="newReleaseYear" placeholder="ReleaseYear" autocomplete="off">
        <input type="text" name="newDuration" placeholder="Duration" autocomplete="off">
        <button type="submit" name="list" value="">+</button>
      </form>
    </div>

</body>

</html>
